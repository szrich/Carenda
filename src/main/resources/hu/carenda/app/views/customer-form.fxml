<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="hu.carenda.app.ui.CustomerFormController"
          hgap="12" vgap="10">
  <padding>
    <Insets top="16" right="16" bottom="16" left="16"/>
  </padding>

  <Label text="Név:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
  <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

  <Label text="Telefon:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <TextField fx:id="phone" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

  <Label text="E-mail:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
  <TextField fx:id="email" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

  <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1">
    <Button text="Mégse" onAction="#onCancel"/>
    <Button text="Mentés" onAction="#onSave" defaultButton="true"/>
  </HBox>
</GridPane>
