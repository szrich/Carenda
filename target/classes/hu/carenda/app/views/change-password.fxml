<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="hu.carenda.app.ui.ChangePasswordController"
      spacing="10"
      prefWidth="500"
      prefHeight="260"
      style="-fx-padding: 15;">

    <children>

        <Label text="Első bejelentkezés – új adatok beállítása" style="-fx-font-weight: bold;"/>
        <Label text="Kérlek, adj meg egy új felhasználónevet és jelszót." wrapText="true"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="130" halignment="RIGHT"/>
                <ColumnConstraints minWidth="180" hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Új felhasználónév:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="newUsernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Új jelszó:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="newPassField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Új jelszó ismét:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <PasswordField fx:id="newPassAgainField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <Label fx:id="statusLabel" textFill="red" wrapText="true"/>

        <HBox spacing="10">
            <children>
                <Button fx:id="saveButton" text="Mentés" onAction="#onSave" defaultButton="true"/>
                <Button fx:id="cancelButton" text="Mégsem" onAction="#onCancel" cancelButton="true"/>
            </children>
        </HBox>

    </children>

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>
</VBox>
